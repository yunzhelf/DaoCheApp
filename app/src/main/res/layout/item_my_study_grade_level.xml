<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:paddingBottom="14px"
        android:paddingLeft="72px"
        android:paddingRight="72px">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13px"
            android:text="4月2日"
            android:textColor="#666666"
            android:textSize="25px"/>

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="77px"
            android:layout_height="56px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18px"
            android:layout_toRightOf="@id/date_tv"
            android:src="@drawable/zhongxue_bottom"/>

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/InitProgressBar"
            android:layout_width="0dp"
            android:layout_height="5px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25px"
            android:layout_toLeftOf="@+id/icon_2"
            android:layout_toRightOf="@+id/icon_1"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"/>

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="77px"
            android:layout_height="56px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/zhongxue_bottom"/>

        <ImageView
            android:id="@+id/person_iv"
            android:layout_width="19px"
            android:layout_height="33px"
            android:layout_above="@+id/progressbar"
            android:src="@drawable/zoulu"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/progressbar"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>