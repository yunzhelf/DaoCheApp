<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".biz.home_function.HomeFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="61px"
            android:layout_marginLeft="22px"
            android:background="@drawable/bg_home_search_box"
            android:gravity="center"
            android:hint="请输入搜索内容"
            android:paddingLeft="10px"
            android:textColor="#9c9c9c"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/msg_iv"
            android:layout_width="65px"
            android:layout_height="65px"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px"
            android:padding="10px"
            android:src="@drawable/xiaoxi" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/tab_container_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="2px"
            android:paddingRight="2px">

            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="分类"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recommend_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:background="@drawable/bg_home_tab_selected"
                android:text="推荐"
                android:textColor="#4087fd"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interview_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="人物专访"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/share_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="优秀分享"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/industry_analysis_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="行业分析"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/second_hand_car_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="二手车"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/auto_trade_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="汽车超市"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/offline_activity_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="线下活动"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/promote_profit_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="盈利提升"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/new_activity_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="新能源"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aftermarket_tv"
                android:layout_width="wrap_content"
                android:layout_height="56px"
                android:gravity="center"
                android:paddingLeft="23px"
                android:paddingRight="23px"
                android:text="后市场"
                android:textColor="#333333"
                android:textSize="29px"
                android:textStyle="bold" />

        </com.zhy.autolayout.AutoLinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>
