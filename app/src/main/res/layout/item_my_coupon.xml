<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/img_ly"
            android:layout_width="217px"
            android:layout_height="180px"
            android:background="@drawable/youhuiquan_detail"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupon_tv_zhekou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34px"
                android:text="5折"
                android:textColor="#f7fcf3"
                android:textSize="67px" />

            <TextView
                android:id="@+id/coupon_tv_manjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:text="满349可用"
                android:textColor="#f7fcf3"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <!--
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

        <TextView
            android:id="@+id/coupon_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_marginTop="12px"
            android:layout_toRightOf="@id/img_ly"
            android:text="大类"
            android:textColor="@color/theme_color"
            android:textSize="26px"
            android:textStyle="bold" />

        <!-- </com.zhy.autolayout.AutoRelativeLayout>-->

        <TextView
            android:id="@+id/coupon_subtype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_type_tv"
            android:layout_marginLeft="18px"
            android:layout_marginTop="12px"
            android:layout_toRightOf="@id/img_ly"
            android:text="小类"
            android:textColor="#333333"
            android:textSize="22px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/date_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_subtype_tv"
            android:layout_marginLeft="18px"
            android:layout_marginTop="18px"
            android:layout_toRightOf="@id/img_ly"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coupon_sdata_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.03.06"
                android:textColor="#bbb"
                android:textSize="18px" />

            <View
                android:layout_width="10px"
                android:layout_height="1px"
                android:background="@color/top_line_color"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/coupon_edata_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.03.21"
                android:textColor="#bbb"
                android:textSize="18px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/youhuiquanxindao" />

        <View
            android:id="@+id/s_v"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/date_ly"
            android:layout_marginLeft="18px"
            android:layout_marginTop="18px"
            android:layout_marginRight="24px"
            android:layout_toRightOf="@id/img_ly"
            android:background="@drawable/line_dashed"
            android:layerType="software"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即使用"
            android:textSize="20px"
            android:textColor="@color/theme_color"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="12px"
            android:paddingRight="12px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18px"
            android:layout_above="@id/s_v"
            android:background="@drawable/shape_blue_corner_border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细信息"
            android:textSize="18px"
            android:textColor="#bbb"
            android:layout_below="@id/s_v"
            android:layout_toRightOf="@+id/img_ly"
            android:layout_marginLeft="18px"
            android:layout_marginTop="14px"
            />
        <ImageView
            android:id="@+id/coupon_expand_iv"
            android:layout_width="21px"
            android:layout_height="21px"
            android:src="@drawable/youhuiquanxiangqing"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/s_v"
            android:layout_marginTop="12px"
            android:layout_marginRight="18px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/coupon_expand_content_tv"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:text="详细信息详细信息详细信息详细信息详细信息详细信息详细信息详细信息详细信息详细信息"
            android:textSize="22px"
            android:textColor="#bbb"
            android:lineSpacingMultiplier="1.0"
            android:lines="4"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:visibility="gone"
            android:background="@color/white"/>
</com.zhy.autolayout.AutoLinearLayout>