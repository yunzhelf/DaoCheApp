<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yifactory.daocheapp.biz.my_function.activity.MySetActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/top_line_color"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/modify_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:paddingLeft="22px"
        android:paddingRight="22px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#333333"
            android:textSize="30px"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/gengduo"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f2f2f2"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_bank_card_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:paddingLeft="22px"
        android:paddingRight="22px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的银行卡"
            android:textColor="#333333"
            android:textSize="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22px"
            android:layout_toLeftOf="@+id/gengduo_iv_two"
            android:text=""
            android:textColor="#999999"
            android:textSize="30px"/>

        <ImageView
            android:id="@+id/gengduo_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/gengduo"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f2f2f2"/>

    <TextView
        android:id="@+id/clear_cache_tv"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:paddingLeft="22px"
        android:text="清除缓存"
        android:textColor="#333333"
        android:textSize="30px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:paddingLeft="22px"
        android:paddingRight="22px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于道车"
            android:textColor="#333333"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/app_version_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22px"
            android:layout_toLeftOf="@+id/gengduo_iv_three"
            android:text="1.0.0"
            android:textColor="#999999"
            android:textSize="30px"/>

        <ImageView
            android:id="@+id/gengduo_iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/gengduo"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="340px"
            android:layout_height="90px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400px"
            android:background="@drawable/shape_bule"
            android:gravity="center"
            android:text="退出当前账号"
            android:textColor="#FFFFFF"
            android:textSize="30px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
