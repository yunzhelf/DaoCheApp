<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context="com.yifactory.daocheapp.biz.my_function.activity.MyCouponActivity"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/top_line_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/coupon_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:xTabDisplayNum="3"
            app:xTabTextSize="17dp"
            app:xTabSelectedTextSize="17dp"
            app:xTabSelectedTextColor="#3b3b3b"
            app:xTabTextColor="#8e8e8e"
            app:xTabIndicatorColor="@color/theme_color"
            app:xTabIndicatorHeight="4px"
            app:xTabIndicatorWidth="50dp"
            android:background="@color/white"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/coupon_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>
