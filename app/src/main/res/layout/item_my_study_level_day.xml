<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="123px"
        android:paddingTop="13px"
        android:paddingBottom="13px">
        <TextView
            android:id="@+id/level_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3月9日"
            android:textSize="25px"
            android:textColor="#7a7a7a"/>
        <View
            android:layout_width="28px"
            android:layout_height="2px"
            android:layout_marginLeft="43px"
            android:background="@color/top_line_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您一共累计学习"
            android:textSize="25px"
            android:textColor="#7a7a7a"
            android:layout_marginLeft="43px"/>
        <TextView
            android:id="@+id/level_min_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textColor="#f2ce51"
            android:textSize="25px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟。"
            android:textSize="25px"
            android:textColor="#7a7a7a"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
