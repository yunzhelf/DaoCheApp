<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yifactory.daocheapp.biz.home_function.activity.HomeSearchActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="22px"
            android:paddingRight="22px">

            <ImageView
                android:layout_width="19px"
                android:layout_height="34px"
                android:layout_centerInParent="true"
                android:src="@drawable/fanhui"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <EditText
            android:id="@+id/search_et"
            android:layout_width="483px"
            android:layout_height="61px"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_home_search_box"
            android:gravity="center"
            android:hint="请输入搜索内容"
            android:paddingLeft="10px"
            android:textColor="#9c9c9c"
            android:textCursorDrawable="@null"
            android:textSize="26px"/>

        <TextView
            android:id="@+id/search_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="22px"
            android:paddingRight="22px"
            android:text="搜索"
            android:textColor="@color/theme_color"
            android:textSize="26px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/top_line_color"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53px"
        android:layout_marginTop="13px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22px"
            android:text="历史搜索"
            android:textColor="#000000"
            android:textSize="26px"/>

        <ImageView
            android:id="@+id/activity_home_search_clear"
            android:layout_width="53px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:padding="10px"
            android:src="@drawable/lajitong"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.yifactory.daocheapp.widget.flowLayout.TagFlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:layout_marginTop="23px"
        android:padding="5dp"/>

</com.zhy.autolayout.AutoLinearLayout>
