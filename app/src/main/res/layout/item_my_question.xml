<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="22px"
        android:paddingRight="22px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="32px">

            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/touxiang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="9px"
                android:layout_toRightOf="@id/head_iv"
                android:text="王三"
                android:textColor="#000"
                android:textSize="27px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="9px"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/head_iv"
                android:text="4S店"
                android:textColor="#666666"
                android:textSize="24px"/>

            <TextView
                android:layout_width="78px"
                android:layout_height="45px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_discover_mood_outer_view_grade"
                android:gravity="center"
                android:text="高中"
                android:textColor="#000"
                android:textSize="24px"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33px"
            android:layout_marginTop="20px"
            android:text="大学之道在明明德，在止于至善，在亲民，古之欲明德于天下者必先治国，欲治国者必先齐家。"
            android:textColor="#000"
            android:textSize="27px"/>

        <com.lzy.ninegrid.NineGridView
            android:id="@+id/nineGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33px"
            android:layout_marginTop="12px"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="52px"
                android:layout_marginLeft="22px"
                android:gravity="center"
                android:padding="11px"
                android:text="删除"
                android:textColor="@color/theme_color"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/give_him_advice_tv"
                android:layout_width="146px"
                android:layout_height="52px"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_bule"
                android:gravity="center"
                android:text="给他建议"
                android:textColor="#FFFFFF"
                android:textSize="25px"/>

            <ImageView
                android:layout_width="40px"
                android:layout_height="15px"
                android:layout_alignParentRight="true"
                android:layout_below="@id/give_him_advice_tv"
                android:layout_marginRight="53px"
                android:layout_marginTop="8px"
                android:src="@drawable/jiantou"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23px"
            android:background="@drawable/bg_comment"
            android:orientation="vertical"
            android:paddingBottom="30px"
            android:paddingLeft="30px"
            android:paddingRight="6px">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/inner_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inner_rv"
                android:gravity="right">

                <TextView
                    android:id="@+id/more_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="7px"
                    android:drawableRight="@drawable/gengduopinglun"
                    android:text="更多评论"
                    android:textColor="@color/theme_color"
                    android:textSize="26px"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="33px"
            android:background="#eeeeee"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>