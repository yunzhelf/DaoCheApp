<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="435px"
                android:background="#0e98d4"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="170px"
                        android:layout_height="170px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45px"
                        android:src="@mipmap/ic_launcher" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="70px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="96分钟"
                            android:textColor="#ffffff"
                            android:textSize="30px" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="学习时长"
                            android:textColor="#ffffff"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="90px"
                        android:background="#FFFFFF"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50px"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4天"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#ffffff"
                            android:textSize="30px" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="连续学习"
                            android:textColor="#ffffff"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoFrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20px">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="小学"
                                android:textColor="#FFFFFF"
                                android:textSize="20px" />
                        </com.zhy.autolayout.AutoFrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15px"
                            android:text="小学"
                            android:textColor="#FFFFFF"
                            android:textSize="25px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="450px"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="距离下一等级还差86分钟"
                            android:textColor="#FFFFFF"
                            android:textSize="25px" />

                        <ProgressBar
                            android:layout_marginTop="20px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="50"
                            style="?android:attr/progressBarStyleHorizontal"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40px"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoFrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20px">

                            <ImageView
                                android:layout_width="80px"
                                android:layout_height="80px"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="中学"
                                android:textColor="#FFFFFF"
                                android:textSize="20px" />
                        </com.zhy.autolayout.AutoFrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15px"
                            android:text="中学"
                            android:textColor="#FFFFFF"
                            android:textSize="25px" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="30px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dream_cabbage_records"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="学习记录"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/left_btn_selected_shape"/>

                <TextView
                    android:id="@+id/tv_gift_cabbage_records"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="我的购买"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/right_btn_normal_shape"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_data"
                android:layout_marginTop="35px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>