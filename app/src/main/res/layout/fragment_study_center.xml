<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".biz.studyCen_function.StudyCenterFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f5f5f5"/>

        <com.yifactory.daocheapp.widget.BaseSwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="433px"
                        android:background="@drawable/beijing"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="280px"
                            android:orientation="horizontal">

                            <com.yifactory.daocheapp.widget.CircleImageView
                                android:id="@+id/user_head_iv"
                                android:layout_width="170px"
                                android:layout_height="170px"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="45px"
                                android:src="@drawable/icon_smallphoto"/>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="23px"
                                android:gravity="center">

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/study_minute_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="96分钟"
                                        android:textColor="@color/white"
                                        android:textSize="24px"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25px"
                                        android:text="学习时长"
                                        android:textColor="@color/white"
                                        android:textSize="28px"/>

                                </com.zhy.autolayout.AutoLinearLayout>


                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="90px"
                                    android:layout_marginLeft="50px"
                                    android:background="@color/white"/>


                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50px"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/study_day_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4天"
                                        android:textColor="@color/white"
                                        android:textSize="24px"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25px"
                                        android:text="连续学习"
                                        android:textColor="@color/white"
                                        android:textSize="28px"/>

                                </com.zhy.autolayout.AutoLinearLayout>

                            </com.zhy.autolayout.AutoLinearLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="36px"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/cur_grade_iv"
                                    android:layout_width="78px"
                                    android:layout_height="78px"
                                    android:layout_marginTop="6px"
                                    android:src="@drawable/huizhang2"/>

                                <TextView
                                    android:id="@+id/cur_grade_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="15px"
                                    android:text="小学"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22px"/>

                            </com.zhy.autolayout.AutoLinearLayout>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="450px"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/needTime_to_nextGrade_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text=""
                                    android:textColor="#FFFFFF"
                                    android:textSize="22px"/>

                                <ProgressBar
                                    android:id="@+id/needTime_to_nextGrade_progressBar"
                                    style="@style/InitProgressBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="5px"
                                    android:layout_marginTop="16px"
                                    android:max="100"
                                    android:progress="0"/>

                            </com.zhy.autolayout.AutoLinearLayout>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="36px"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/next_grade_iv"
                                    android:layout_width="78px"
                                    android:layout_height="78px"
                                    android:layout_marginTop="6px"
                                    android:src="@drawable/huizhang3"/>

                                <TextView
                                    android:id="@+id/next_grade_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="15px"
                                    android:text="中学"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22px"/>

                            </com.zhy.autolayout.AutoLinearLayout>

                        </com.zhy.autolayout.AutoRelativeLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="562px"
                        android:layout_height="79px"
                        android:layout_marginTop="32px"
                        android:background="@drawable/bg_study_center_tab">

                        <TextView
                            android:id="@+id/study_record_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_study_center_tab_one"
                            android:gravity="center"
                            android:text="学习记录"
                            android:textColor="@color/white"
                            android:textSize="30px"/>

                        <TextView
                            android:id="@+id/my_buy_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="我的购买"
                            android:textColor="#000000"
                            android:textSize="30px"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.yifactory.daocheapp.widget.MaxRecyclerView
                        android:id="@+id/video_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34px"
                        android:visibility="visible">

                    </com.yifactory.daocheapp.widget.MaxRecyclerView>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/video_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="790px"
                        android:layout_marginTop="38px"
                        android:orientation="vertical"
                        android:paddingLeft="30px"
                        android:paddingRight="30px"
                        android:visibility="gone">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="158px">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/yunying_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="运营管理"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/yunying_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>


                            </com.zhy.autolayout.AutoRelativeLayout>

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/xiaoshou_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="49px"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="销售管理"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/xiaoshou_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:id="@+id/gengduo_iv"
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>


                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="158px"
                            android:layout_marginTop="28px">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/shichang_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai3">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="市场营销"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/shichang_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>


                            </com.zhy.autolayout.AutoRelativeLayout>

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/yansheng_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="49px"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai4">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="衍生业务"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/yansheng_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>

                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="158px"
                            android:layout_marginTop="28px">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/shouhou_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="售后管理"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/shouhou_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>


                            </com.zhy.autolayout.AutoRelativeLayout>

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/renshi_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="49px"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai6">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="人事行政"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/renshi_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>

                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="158px"
                            android:layout_marginTop="28px">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/kefu_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="客户维护"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/kefu_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>


                            </com.zhy.autolayout.AutoRelativeLayout>

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:id="@+id/caiwu_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="49px"
                                android:layout_weight="1"
                                android:background="@drawable/wodegoumai8">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="财务管理"
                                    android:textColor="@color/white"
                                    android:textSize="40px"
                                    android:textStyle="bold"/>

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="17px"
                                    android:layout_marginRight="17px"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/caiwu_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="26px"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="20px"
                                        android:layout_marginLeft="15px"
                                        android:src="@drawable/gengduo"/>

                                </com.zhy.autolayout.AutoLinearLayout>

                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </ScrollView>

        </com.yifactory.daocheapp.widget.BaseSwipeRefreshLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="222px"
            android:background="@drawable/wuxiaoxi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="登录后，你的个人资料，你的学习时长，你的"
            android:textColor="#cccccc"
            android:textSize="26px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收益，等级都将会在这里显示"
            android:textColor="#cccccc"
            android:textSize="26px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="105px"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/login_tv"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:background="@drawable/shape_gray_corner_stroke2"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/theme_color"
                android:textSize="26px"/>

            <View
                android:layout_width="110px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/register_tv"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:background="@drawable/shape_gray_corner_stroke2"
                android:gravity="center"
                android:text="注册"
                android:textColor="#999999"
                android:textSize="26px"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
