<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="173px"
        android:orientation="vertical"
        android:paddingBottom="22px"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <ImageView
            android:id="@+id/video_iv"
            android:layout_width="214px"
            android:layout_height="151px"
            android:scaleType="centerCrop"
            android:src="@drawable/shipin" />

        <ImageView
            android:id="@+id/btn_iv"
            android:layout_width="214px"
            android:layout_height="151px"
            android:scaleType="centerCrop"
            android:src="@drawable/shipinx" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/video_iv">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人为什么要努力"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="王五"
                android:textColor="#000000"
                android:textSize="23px"
                android:visibility="gone"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:layout_marginLeft="32px"
            android:layout_marginTop="20px"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/video_iv"
            android:text="如何做好新员工培训"
            android:textColor="#333333"
            android:textSize="24px" />

        <TextView
            android:id="@+id/play_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/video_iv"
            android:drawableLeft="@drawable/bofangshu"
            android:drawablePadding="8px"
            android:text="3829次"
            android:textColor="#666666"
            android:textSize="20px" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="59px"
            android:layout_toRightOf="@id/play_count_tv"
            android:text="时长: 5:40"
            android:textColor="#666666"
            android:textSize="20px" />

        <TextView
            android:id="@+id/free_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10px"
            android:text="免费"
            android:textColor="@color/theme_color"
            android:textSize="20px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>