<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yifactory.daocheapp.biz.my_function.activity.MyLecturerUploadVideoActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/top_line_color"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="手机号"
                    android:textColor="#333333"
                    android:textSize="30px"/>

                <EditText
                    android:id="@+id/forget_mobile_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:paddingLeft="18px"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="30px"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="62px"
                    android:background="@color/top_line_color"/>

                <TextView
                    android:id="@+id/forget_send_verity_tv"
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="22px"
                    android:paddingRight="22px"
                    android:text="发送验证码"
                    android:textColor="@color/theme_color"
                    android:textSize="26px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f3f3f3"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="验证码"
                    android:textColor="#333333"
                    android:textSize="30px"/>

                <EditText
                    android:id="@+id/forget_veritycode_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingLeft="23px"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="30px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f3f3f3"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="设置密码"
                    android:textColor="#333333"
                    android:textSize="30px"/>

                <EditText
                    android:id="@+id/forget_new_psw_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="设置新密码"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:paddingLeft="23px"
                    android:inputType="textPassword"
                    android:textColor="#333333"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#999999"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f3f3f3"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="确认密码"
                    android:textColor="#333333"
                    android:textSize="30px"/>
                <EditText
                    android:id="@+id/forget_confirm_psw_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请再次输入新密码"
                    android:paddingLeft="23px"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="30px"/>

            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f3f3f3"/>
        </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/forget_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:layout_marginRight="120px"
        android:layout_marginTop="467px"
        android:background="@drawable/shape_bule"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="31px"/>

</com.zhy.autolayout.AutoLinearLayout>
